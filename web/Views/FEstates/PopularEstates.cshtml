@model List<DAL.Entities.Estate>
@{
    ViewBag.Title = @SharedRess.SharedStrings.popularestates;
    Layout = "~/Views/Shared/frontlayout.cshtml";
}
<div id="containerInner">
    <div id="content">


        <div id="highlightsGeneralContent">
            <h1>@SharedRess.SharedStrings.popularestates.ToUpper()</h1>

        </div>
        <div class="highlights">
            <p class="detailsPortfolio">@SharedRess.SharedStrings.clickonimages</p>
            @foreach (var item in Model)
            {
                <a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.detail/@item.Id" style="text-decoration:none">
                    <div class="highlightsContent">
                        <div class="highlightsImage">
                            <a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.detail/@item.Id" style="text-decoration:none">
                                <img src="@item.Photo" width="250" height="161" alt="@item.Header" /></a>
                        </div>
                        <div class="highlightsRight">
                            <div class="info">
                                 <a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.detail/@item.Id" style="text-decoration:none"><h4>@item.Header</h4></a>

                                <span class="location">@item.Country.Name/ @item.Town.Name/ @item.District.Name</span>
                                <span class="type">
                                    @if (item.TransactionId == 0)
                                    {
                                        @SharedRess.SharedStrings.hired
                                    }else{
                                        @SharedRess.SharedStrings.sold
                                    }
                                <i>No:@item.ReferenceNo</i>
                                </span>
                                <ul class="detail">
                                    <li class="room"><i>@SharedRess.SharedStrings.roomcount:</i> @item.RoomNumber
                                    
                                    </li>
                                    <li class="area">@item.Size <i>m²</i></li>
                                    <li class="date">@item.TimeCreated</li>
                                    <li class="price">@string.Format("{0:0}", item.Price) <i>@item.PriceTypeId</i></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </a>
            }
