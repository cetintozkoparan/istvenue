                        <div class="highlightsPricing"><a class="realtyName" href="#">@item.Header</a><span class="realtyPrice" style="clear: both;">@item.Price TL</span></div>
                        <div class="highlightsArticle">@Html.Raw(item.Content)</div>
                    </div>
                </div>
            }*@
        </div>
    </div>
</div>
