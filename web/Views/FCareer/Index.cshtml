@model DAL.Entities.HumanResource
@{
    ViewBag.Title = @SharedRess.SharedStrings.humanresources;
    Layout = "~/Views/Shared/frontlayout.cshtml";
}
<div class="main2Left">
    <div class="urunler leftMenu">
        <h2 class="sectionTitle"><span>@SharedRess.SharedStrings.humanresources</span></h2>
        <ul>
            <li><a class="selected" href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_humanresources">@CareerRess.CareerStrings.joinus</a></li>
            <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_humanresources/@SharedRess.SharedStrings.menu_openpositions">@SharedRess.SharedStrings.openpositions</a></li>
        </ul>
    </div>
</div>

<div class="main2Right">
    <div class="pagenav">
        <ul>
            <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
            <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_aboutus">@SharedRess.SharedStrings.aboutus</a></li>
            <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_humanresources" class="last selected">@SharedRess.SharedStrings.humanresources</a></li>
        </ul>
    </div>
    <h3 class="pageTitle openposition">@CareerRess.CareerStrings.joinus.ToUpper()</h3>
    <div class="pageContent">
        @Html.Raw(Model.Content)
    </div>
</div>
