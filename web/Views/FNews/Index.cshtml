@model web.Models.NewsWrapperModel
@{
    ViewBag.Title = @SharedRess.SharedStrings.menu_news.ToUpper();
    Layout = "~/Views/Shared/frontlayout.cshtml";
}

<div id="containerInner">
    <div id="content">
        @*<div class="fullSection">
            <h1>@SharedRess.SharedStrings.marketnews.ToUpper()</h1>
        </div>*@
        <div class="fullSection news" style="width: 97%;">
                <h1>@SharedRess.SharedStrings.marketnews.ToUpper()</h1>
        </div>
        @foreach (var item in Model.news)
        {
            <div class="fullSection news">
                <h2>@item.Header</h2>
                @*<h3>MIPIM – A YEAR'S WORTH OF REAL ESTATE BUSINESS IN 4 INTENSIVE DAYS! </h3>*@
                @Html.Raw(item.Content)
            </div>
            if (Model.photos.Where(d => d.ItemId == item.NewsId).Count() > 0)
            {
                <div class="marketContent">
                <h1>@item.Spot</h1>
                <ul class="marketAnalysisList">
                    @foreach (var photo in Model.photos.Where(d => d.ItemId == item.NewsId))
                    {
                        <li><a class="group1 cboxElement" href="@photo.Path" title="@photo.PhotoId">
                        <img src="@photo.Thumbnail" width="286" height="210" alt="@item.Header" /></a></li>
                    }
                </ul>
            </div>
            }


        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.analysisLeft').bxSlider({
            slideWidth: 300,
            minSlides: 1,
            maxSlides: 1,
            moveSlides: 1,
            slideMargin: 5,
            controls: false,
        });
        $('.marketAnalysisList').bxSlider({
            slideWidth: 300,
            minSlides: 1,
            maxSlides: 3,
            moveSlides: 1,
            slideMargin: 5,
            auto: true,
            pager: false
        });
        $(".group1").colorbox({ rel: 'group1' });
        $(".group2").colorbox({ rel: 'group2' });
        $(".group3").colorbox({ rel: 'group3' });
        $(".group4").colorbox({ rel: 'group4' });
        $(".group5").colorbox({ rel: 'group5' });
        $(".group6").colorbox({ rel: 'group6' });
        $(".group7").colorbox({ rel: 'group7' });
        $(".group8").colorbox({ rel: 'group8' });
        $(".group9").colorbox({ rel: 'group9' });
        $(".group10").colorbox({ rel: 'group10' });
    });

</script>