@model DAL.Entities.Page
@{
    ViewBag.Title = Model.Header;
    Layout = "~/Views/Shared/frontlayout.cshtml";
}

<div class="main2">
    @{ Html.RenderAction("main2Left", "FShared"); }

    <div class="main2Right">
        <div class="pagenav">
            <ul>
                <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_homepage">@SharedRess.SharedStrings.homepage</a></li>
                <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_aboutus">@SharedRess.SharedStrings.aboutus</a></li>
                <li><a href="/@SharedRess.SharedStrings.menu_culture/@SharedRess.SharedStrings.menu_aboutus/@Model.PageSlug/@Model.PageId" class="last selected">@Model.Header</a></li>
            </ul>
        </div>
        <h3 class="pageTitle">@Model.Header</h3>
        
        <div class="pageContent">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
